{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "target": "es5",
    "downlevelIteration": true,
    "module": "esnext",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "./src/",
    "paths": {
      "@pages": ["./pages"],
      "shared": ["./shared"],
      "services": ["./services"],
      "styles": ["./styles"],
      "assets": ["./assets"],
      "utils": ["./utils"],
      "constants": ["./constants"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
